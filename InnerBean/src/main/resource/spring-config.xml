<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="person" class="com.citi.MySpring.InnerBean.Person">
		<property name="name" value="PolarisEmp" />
		<property name="age" value="35"></property>
		<property name="addrs">
			<bean class="com.citi.MySpring.InnerBean.Address">
				<property name="street" value="gachibowli"></property>
				<property name="city" value="hyderabad"></property>
				<property name="state" value="telagana"></property>
			</bean>
		</property>
	</bean>

	<bean id="Person2" class="com.citi.MySpring.InnerBean.Person">
		<property name="name" value="PolarisEmp2"></property>
		<property name="age" value="36"></property>
	</bean>

</beans>